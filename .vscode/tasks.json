{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Auto Execute Command",
            "type": "shell",
            "command": "source .venv/Scripts/activate && exec bash",
            "options": {
                "shell": {
                    "executable": "C:\\Program Files\\Git\\bin\\bash.exe",
                    "args": ["-c"]
                }
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}